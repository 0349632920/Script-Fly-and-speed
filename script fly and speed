	for _, c in ipairs(children) do
		if c:IsA("TextButton") and c.Text == "-" and c.Position.Y.Offset == 98 then finMaxMinus = c end
		if c:IsA("TextButton") and c.Text == "+" and c.Position.Y.Offset == 98 then finMaxPlus = c end
		if c:IsA("TextButton") and c.Text == "-" and c.Position.Y.Offset == 140 then finBoostMinus = c end
		if c:IsA("TextButton") and c.Text == "+" and c.Position.Y.Offset == 140 then finBoostPlus = c end
	end
	-- If those weren't found (rare), ignore; but normally they exist.

	applyWalkSpeed()
	refreshLeftUI()
	refreshRightUI()
end

-- ===== KEY CHECK =====
local function checkKey()
	local k = (input.Text or ""):upper():gsub("%s+","")
	if k == KEY_OK then
		access = true
		msg.Text = "✅ KEY ĐÚNG"
		keyBox.Visible = false
		createPanels()
		notify("OK","Script đã load xong ✅",3)
	else
		msg.Text = "❌ KEY SAI"
		notify("KEY","Key sai ❌",2)
	end
end

confirmBtn.MouseButton1Click:Connect(checkKey)
input.FocusLost:Connect(function(enterPressed)
	if enterPressed then checkKey() end
end)

-- ===== INPUT: P/O + Jump =====
UserInputService.InputBegan:Connect(function(inp, gp)
	if gp then return end

	-- O: mở lại nếu lỡ bấm X đóng
	if inp.KeyCode == Enum.KeyCode.O then
		if keyBox and not access then keyBox.Visible = true end
		if leftPanel and access then leftPanel.Visible = true end
		if rightPanel and access then rightPanel.Visible = true end
	end

	if not access then return end

	-- P: ẩn/hiện 2 panel
	if inp.KeyCode == Enum.KeyCode.P and leftPanel and rightPanel then
		local v = not leftPanel.Visible
		leftPanel.Visible = v
		rightPanel.Visible = v
		return
	end

	-- Jump logic: chặn double jump khi chưa bật, finite/inf khi bật
	if inp.KeyCode == Enum.KeyCode.Space then
		local hum = getHumanoid()
		local hrp = getHRP()

		if (not infJump) and (not finEnabled) then
			if not isGrounded(hum) then
				local now = tick()
				if now - lastSpaceAt < 0.5 then return end
				lastSpaceAt = now
			end
			return
		end

		if infJump then
			if not isGrounded(hum) then
				local v = hrp.AssemblyLinearVelocity
				hrp.AssemblyLinearVelocity = Vector3.new(v.X, math.max(v.Y, finBoost), v.Z)
			end
			return
		end

		if finEnabled then
			if isGrounded(hum) then
				usedAir = 0
				return
			end
			if usedAir >= finMaxAir then return end
			usedAir += 1
			local v = hrp.AssemblyLinearVelocity
			hrp.AssemblyLinearVelocity = Vector3.new(v.X, math.max(v.Y, finBoost), v.Z)
		end
	end
end)

-- ===== Respawn =====
player.CharacterAdded:Connect(function()
	stopFly()
	if antiRagConn then antiRagConn:Disconnect() antiRagConn=nil end
	if antiFallConn then antiFallConn:Disconnect() antiFallConn=nil end
	if trainingConn then trainingConn:Disconnect() trainingConn=nil end

	task.wait(0.1)
	applyWalkSpeed()
	if antiRagdoll then setAntiRagdoll(true) end
	if antiFall then setAntiFall(true) end
	if trainingEnabled then setTrainingMode(true) end

	usedAir = 0
	hookGroundReset()
end)

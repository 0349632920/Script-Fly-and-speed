	}, leftContent)

	finBoostLbl = mkUI("TextLabel", {
		Size=UDim2.new(0.55, -15, 0, 34),
		Position=UDim2.new(0, 10, 0, 140),
		TextScaled=true,
		TextXAlignment=Enum.TextXAlignment.Left
	}, leftContent)

	local finBoostMinus = mkUI("TextButton", {
		Size=UDim2.new(0, 45, 0, 34),
		Position=UDim2.new(0.55, 0, 0, 140),
		TextScaled=true,
		Text="-"
	}, leftContent)

	local finBoostPlus = mkUI("TextButton", {
		Size=UDim2.new(0, 45, 0, 34),
		Position=UDim2.new(0.55, 50, 0, 140),
		TextScaled=true,
		Text="+"
	}, leftContent)

	-- RIGHT
	rightPanel = mkUI("Frame", {
		Name="RightPanel",
		Size=UDim2.new(0, 320, 0, isAdmin() and 560 or 430),
		Position=UDim2.new(1, -340, 0, 20),
	}, gui)
	rightContent = addWindowButtons(rightPanel, "BAY / SPEED / ANTI")

	flyBtn = mkUI("TextButton", {
		Size=UDim2.new(1, -20, 0, 42),
		Position=UDim2.new(0, 10, 0, 10),
		TextScaled=true
	}, rightContent)

	speedLbl = mkUI("TextLabel", {
		Size=UDim2.new(0.55, -15, 0, 34),
		Position=UDim2.new(0, 10, 0, 62),
		TextScaled=true,
		TextXAlignment=Enum.TextXAlignment.Left

	local speedMinus = mkUI("TextButton", {
		Size=UDim2.new(0, 45, 0, 34),
		Position=UDim2.new(0.55, 0, 0, 62),
		TextScaled=true,
		Text="-"
	}, rightContent)

	local speedPlus = mkUI("TextButton", {
		Size=UDim2.new(0, 45, 0, 34),
		Position=UDim2.new(0.55, 50, 0, 62),
		TextScaled=true,
